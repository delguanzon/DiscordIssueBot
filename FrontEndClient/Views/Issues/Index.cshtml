@{
    ViewData["Title"] = "Issues";
}

<h1>All Issues</h1>

<form>
  <label for="search">Filter Issues By Search Term</label>
  <input type="text" name="searchTerm" id="searchTerm">
  <button type="submit" class="btn btn-secondary">Search</button>
</form>

<ol>
@foreach (Issue issue in Model)
{
  <li><strong>@issue.Name</strong> <a href="/Issues/Details/@(issue.IssueId)">View Details</a></li>
}
</ol>

